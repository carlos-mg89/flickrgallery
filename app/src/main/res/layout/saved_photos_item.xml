<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="photo"
            type="com.example.flickrgallery.model.Photo" />
        <variable
            name="viewModel"
            type="com.example.flickrgallery.ui.SavedPhotosViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <RelativeLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/photo"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:contentDescription="@string/saved_photos_item"
                android:src="@drawable/ic_launcher_background"
                app:url="@{photo.medium640Url}" />
        </RelativeLayout>

        <LinearLayout
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/saved_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                tools:text="12/12/2021 15:40"
                android:text="@{ photo.savedDate.toString() }"/>

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                tools:text="Description"
                android:text="@{ photo.title }"/>


        </LinearLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingTop="15dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/delete_btn"
                android:layout_height="48dp"
                android:layout_width="48dp"
                android:layout_centerInParent="true"
                android:contentDescription="@string/saved_photos_delete"
                android:tint="#444444"
                android:src="@drawable/ic_baseline_delete"/>


        </RelativeLayout>

    </LinearLayout>
</layout>